{
  "env": {
    "node": true,
    "mocha": true,
    "browser": false
  },
  "extends": "airbnb-base",
  "rules": {
    "no-use-before-define": "off",
    "object-shorthand": "off",
    "func-names": ["error", "never"],
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "no-unused-expressions": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_[A-Za-z0-9_]" }]
  }
}
